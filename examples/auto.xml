<dt-example table-type="table-wide" order="2">

<css lib="datatables responsive">
	#auto thead th {
		white-space: nowrap;
	}
</css>
<js lib="jquery datatables responsive">
<![CDATA[

$(document).ready(function() {
	$('#auto').DataTable( {
		columnDefs: [
			{ visible: false, targets: -2 }
		]
	} );
} );

]]>
</js>

