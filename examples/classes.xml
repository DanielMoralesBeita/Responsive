<?xml version="1.0" encoding="UTF-8" ?>
<dt-example table-type="table-wide" order="2">

<css lib="datatables responsive">
	#auto thead th {
		white-space: nowrap;
	}
</css>
<js lib="jquery datatables responsive">
<![CDATA[

$(document).ready(function() {
	$('#example').DataTable();
} );

]]>
</js>

<title lib="Responsive">Column control</title>

<info><![CDATA[


]]></info>

<custom-table>
	<div id="breakpoint"> </div>
	<table id="example" class="display responsive" width="100%">
		<thead>
			<tr>
				<th>First name (all)</th>
				<th class="min-tablet-l">Last name (desktop, tablet-l)</th>
				<th class="max-tablet">Position (tablet, mobile)</th>
				<th class="min-tablet">Office (desktop, tablet)</th>
				<th class="desktop">Age (desktop)</th>
				<th class="tablet">Start date (tablet)</th>
				<th class="tablet-p">Salary (tablet-p)</th>
				<th class="not-tablet-l">Extn. (desktop, tablet-p, mobile)</th>
				<th class="not-phone">E-mail (desktop, tablet)</th>
			</tr>
		</thead>

		<tfoot>
			<tr>
				<th>First name</th>
				<th>Last name</th>
				<th>Position</th>
				<th>Office</th>
				<th>Age</th>
				<th>Start date</th>
				<th>Salary</th>
				<th>Extn.</th>
				<th>E-mail</th>
			</tr>
		</tfoot>
	</table>
</custom-table>

</dt-example>

